@model List<SanalGozluk.Models.Gozluk>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center mb-5">
    <h1 class="display-4">Sanal Gözlük Mağazası</h1>
    <p>Yüz tipinize en uygun gözlüğü yapay zeka ile deneyin.</p>
</div>

<div class="container mb-4">
    <div class="d-flex justify-content-center gap-2">
        <span class="align-self-center me-2 fw-bold text-muted">Yüz Tipini Seç:</span>
        
        <a asp-action="Index" asp-route-yuzTipi="" 
           class="btn @(ViewBag.SecilenTip == null ? "btn-dark" : "btn-outline-dark")">
           Tümü
        </a>

        <a asp-action="Index" asp-route-yuzTipi="Oval" 
           class="btn @(ViewBag.SecilenTip == "Oval" ? "btn-dark" : "btn-outline-dark")">
           Oval
        </a>

        <a asp-action="Index" asp-route-yuzTipi="Kare" 
           class="btn @(ViewBag.SecilenTip == "Kare" ? "btn-dark" : "btn-outline-dark")">
           Kare
        </a>

        <a asp-action="Index" asp-route-yuzTipi="Yuvarlak" 
           class="btn @(ViewBag.SecilenTip == "Yuvarlak" ? "btn-dark" : "btn-outline-dark")">
           Yuvarlak
        </a>
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var gozluk in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@gozluk.ResimUrl" class="card-img-top p-4" alt="@gozluk.Ad" style="height: 200px; object-fit: contain;">
                    
                    <div class="card-body">
                        <h5 class="card-title">@gozluk.Ad</h5>
                        <p class="card-text text-muted">Yüz Tipi: <strong>@gozluk.YuzTipi</strong></p>
                        <h4 class="text-primary">@gozluk.Fiyat TL</h4>
                    </div>
                    
                    <div class="card-footer bg-white border-top-0 d-flex justify-content-between">
                        <button class="btn btn-outline-dark">Sepete Ekle</button>
                        
                        <a asp-controller="DenemeOdasi" asp-action="Index" asp-route-id="@gozluk.Id" class="btn btn-danger w-50">
                            🕶 Dene
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>